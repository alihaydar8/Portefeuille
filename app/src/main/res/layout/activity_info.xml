<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back5"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:src="@drawable/arrawback"
            android:padding="5dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ImageUserI"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/n5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="30dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:background="@color/purple_200"
            android:padding="10dp">
            <TextView
                android:id="@+id/argentI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_balance"
                android:layout_gravity="center"
                android:textColor="@color/white"/>
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGraph1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/p15"
            android:layout_marginRight="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
>

                <org.eazegraph.lib.charts.PieChart
                    android:id="@+id/piechart1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/p15"
                    android:layout_marginTop="@dimen/p15"
                    android:layout_marginBottom="@dimen/p15"
                    android:layout_weight="1"
                    android:padding="6dp"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical">


                        <View
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:background="@color/Other" />

                        <TextView
                            android:id="@+id/Other1"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">


                        <View
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:background="@color/Food" />

                        <TextView
                            android:id="@+id/Food"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:background="@color/House" />

                        <TextView
                            android:id="@+id/House"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Transport" />

                        <TextView
                            android:id="@+id/Transport"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">


                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Entertainment" />

                        <TextView
                            android:id="@+id/Entertainment"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Health" />

                        <TextView
                            android:id="@+id/Health"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Personel" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:paddingLeft="10dp"
                            android:id="@+id/Personel" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Diag1"
            android:layout_below="@+id/cardViewGraph1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Diagramme des depences selon les types" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewGraph2"
            android:layout_below="@+id/Diag1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">


                <org.eazegraph.lib.charts.PieChart
                    android:id="@+id/piechart2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/p15"
                    android:layout_marginTop="@dimen/p15"
                    android:layout_marginBottom="@dimen/p15"
                    android:layout_weight="1"
                    android:padding="6dp"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/p20"
                    android:layout_weight="1"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical">


                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Other" />

                        <TextView
                            android:id="@+id/Other2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">


                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Salary" />

                        <TextView
                            android:id="@+id/Salary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Gift" />

                        <TextView
                            android:id="@+id/Gift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p15"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp">

                        <View
                            android:layout_width="@dimen/p15"
                            android:layout_height="match_parent"
                            android:background="@color/Aide" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:id="@+id/Aide" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/Diag2"
            android:layout_below="@+id/cardViewGraph2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Diagramme des depences selon les types" />
    </LinearLayout>
</RelativeLayout>