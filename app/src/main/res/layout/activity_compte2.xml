<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/purple_200"
    android:visibility="visible">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_700"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="?actionBarSize"
            android:padding="16dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title" />

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_700"/>


    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/npom"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:gravity="center"
        android:padding="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="112dp"
        android:id="@+id/argent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        tools:layout_editor_absoluteY="271dp" />

    <ImageButton
        android:id="@+id/Bplus"
        android:layout_width="203dp"
        android:layout_height="114dp"
        android:background="#008000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/npom" />
    <TextView
        android:layout_width="203dp"
        android:layout_height="50dp"
        android:id="@+id/ajout"
        android:text="AJOUTER"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/npom"/>
    <TextView
        android:layout_width="203dp"
        android:layout_height="64dp"
        android:id="@+id/plus"
        android:gravity="center"
        android:inputType="number"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ajout"/>

    <ImageButton
        android:id="@+id/Bmoin"
        android:layout_width="203dp"
        android:layout_height="114dp"
        android:background="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/argent" />
    <TextView
        android:layout_width="203dp"
        android:layout_height="50dp"
        android:id="@+id/m"
        android:text="RETIRE \n \n  "
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/argent"/>
    <TextView
        android:layout_width="203dp"
        android:id="@+id/moin"
        android:layout_height="64dp"
        android:inputType="number"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/m"/>

<ScrollView

    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toBottomOf="@+id/moin">

    <TextView
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="alii"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/moin"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
